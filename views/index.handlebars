<main>
  <div class="container">
    <div class="row" id="title_row">
      <div class="col s12">
        <h1>Burger-Meister!</h1>
      </div>
    </div>

    <div class="row theBottom">
      <div class="col s12 l6 xl4">
        <h2>Burgers to Chomp!</h2>

          {{#each burgers}}
            {{#unless this.devoured}}

                <div class="bottom_row">
                  <form action="/api/burgers/{{this.id}}?_method=PUT" method="POST">
                  <button class="burgerToEat" type="submit">{{this.burger_name}} | CHOMP NOW!</button>
                  </form>
                </div>

            {{/unless}}
          {{/each}}

      </div>

      <div class="col s12 l6 xl4 bottom_row">
        <h2>Add A Burger</h2>
          <form action="/api/burgers" method="POST">
            <input type="text" autocomplete="off" id="name" name="burger_name" placeholder="Krabby Patty">
            <button class="btn waves-effect waves-light addBurger" type="submit" >Add That Burger</button>
          </form>
      </div>

      <div class="col s12 l12 xl4 bottom_row">
        <h2>Burgers Chomped!</h2>
        {{#each burgers}}
          {{#if this.devoured}}
            <div class="burgerGone">
              <div>
                {{this.burger_name}}
              </div>
            </div>
          {{/if}}
        {{/each}}
      </div>
    </div>
  </div>
</main>